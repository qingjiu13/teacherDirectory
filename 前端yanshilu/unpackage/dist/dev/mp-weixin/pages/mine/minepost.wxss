@import "../../uvue.wxss";
:host{display:flex;flex-direction:column}
page{--primary-color: #1E90FF;--primary-light: #87CEEB;--primary-dark: #0073CF;--gradient-blue: linear-gradient(135deg, #1E90FF, #00BFFF);--gradient-blue-light: linear-gradient(135deg, #87CEEB, #48D1CC);--text-primary: #333333;--text-secondary: #666666;--text-light: #999999;--bg-color: #F5F9FC;--card-shadow: 0 4px 12px rgba(30, 144, 255, .1);font-family:PingFang SC,Helvetica Neue,Arial,sans-serif}.container{display:flex;flex-direction:column;min-height:100vh;box-sizing:border-box;background-color:var(--bg-color);position:relative}.content{flex:1;width:100%}.page-header{padding:20px;background-color:#fff;display:flex;flex-direction:row;align-items:center}.back-button{width:30px;height:30px;display:flex;justify-content:center;align-items:center;margin-right:10px}.back-icon{font-size:22px;font-weight:700;color:var(--text-primary)}.page-title{font-size:20px;font-weight:700;color:var(--text-primary)}.post-list{width:100%;padding-bottom:20px}.post-card{margin:12px 15px;background-color:#fff;border-radius:16px;padding:18px;box-shadow:var(--card-shadow);transition:transform .3s ease}.post-card:active{transform:scale(.98)}.post-content{margin-bottom:18px}.post-text{font-size:15px;line-height:1.7;color:var(--text-primary)}.post-footer{display:flex;flex-direction:column;border-top:1px solid rgba(0,0,0,.05);padding-top:15px;margin-top:5px}.post-info{display:flex;justify-content:space-between;margin-bottom:12px}.post-time,.stat-count{font-size:12px;color:var(--text-light)}.action-bar{display:flex;flex-direction:row;width:100%;background-color:#fff;padding:10px 0 0;border-top:1px solid rgba(0,0,0,.05);margin-top:8px;box-sizing:border-box;justify-content:space-around}.action-item{display:flex;flex-direction:column;align-items:center;justify-content:center;width:25%;padding:8px 0;transition:all .3s ease}.action-item:active{transform:scale(.95);background-color:rgba(30,144,255,.05);border-radius:8px}.action-icon{width:22px;height:22px;margin-bottom:5px;opacity:.8}.action-count{font-size:12px;color:var(--text-secondary);text-align:center}.empty-tip{display:flex;flex-direction:column;justify-content:center;align-items:center;height:300px;color:var(--text-light);font-size:15px}.empty-tip:before{content:"";width:80px;height:80px;margin-bottom:20px;background-color:rgba(30,144,255,.1);border-radius:50%;display:flex;justify-content:center;align-items:center}.loading-container{display:flex;justify-content:center;padding:20px 0}.loading-indicator{width:30px;height:30px;border:3px solid rgba(30,144,255,.2);border-top-color:var(--primary-color);border-radius:50%;animation:spin .8s linear infinite}@keyframes spin{to{transform:rotate(360deg)}}.refresh-tip{text-align:center;padding:15px 0;color:var(--primary-color);font-size:14px;font-weight:500}
