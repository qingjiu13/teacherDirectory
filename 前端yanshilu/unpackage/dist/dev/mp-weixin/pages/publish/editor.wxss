@import "../../uvue.wxss";
:host{display:flex;flex-direction:column}
page{--primary-color: #1E90FF;--primary-light: #87CEEB;--primary-dark: #0073CF;--gradient-blue: linear-gradient(135deg, #1E90FF, #00BFFF);--gradient-blue-light: linear-gradient(135deg, #87CEEB, #48D1CC);--text-primary: #333333;--text-secondary: #666666;--text-light: #999999;--bg-color: #F5F9FC;--card-shadow: 0 4px 12px rgba(30, 144, 255, .1);font-family:PingFang SC,Helvetica Neue,Arial,sans-serif}.container{display:flex;flex-direction:column;height:100vh;background-color:var(--bg-color)}.header{display:flex;flex-direction:row;align-items:center;padding:15px 20px;background-image:var(--gradient-blue);border-bottom-left-radius:20px;border-bottom-right-radius:20px;box-shadow:0 4px 15px rgba(30,144,255,.2)}.back-button{padding:8px;font-size:20px;color:#fff;width:36px;height:36px;background-color:rgba(255,255,255,.2);border-radius:50%;display:flex;align-items:center;justify-content:center;transition:all .3s ease}.back-button:active{transform:scale(.92);background-color:rgba(255,255,255,.3)}.header-title{flex:1;text-align:center;font-size:18px;font-weight:600;color:#fff;letter-spacing:.5px}.form-content{padding:20px;flex:1;overflow-y:auto}.input-section{margin-bottom:20px}.tag-row{display:flex;flex-wrap:wrap;margin-bottom:20px}.tag-selection{display:flex;align-items:center;padding:8px 16px;margin-right:10px;margin-bottom:10px;border:1px solid rgba(30,144,255,.3);border-radius:20px;font-size:14px;background-color:rgba(30,144,255,.05);transition:all .3s ease}.tag-selection:active{background-color:rgba(30,144,255,.1);transform:scale(.98)}.tag-text{margin-right:5px;color:var(--primary-color);font-weight:500}.tag-arrow{width:14px;height:14px;opacity:.8}.tag-item{padding:8px 16px;margin-right:10px;margin-bottom:10px;border-radius:20px;font-size:14px;background-image:var(--gradient-blue-light);color:#fff;box-shadow:0 2px 6px rgba(30,144,255,.2);display:flex;align-items:center}.tag-remove{margin-left:8px;color:#fff;font-size:16px;opacity:.8}.add-tag{padding:8px 16px;margin-right:10px;margin-bottom:10px;border:1px dashed rgba(30,144,255,.5);border-radius:20px;font-size:14px;background-color:rgba(30,144,255,.05);color:var(--primary-color);transition:all .3s ease;display:flex;align-items:center;justify-content:center}.add-tag:active{background-color:rgba(30,144,255,.1);transform:scale(.98)}.add-tag text{font-size:18px;margin-right:2px}.content-input{width:100%;min-height:200px;padding:15px;font-size:15px;line-height:1.6;border:1px solid rgba(0,0,0,.08);border-radius:12px;margin-bottom:15px;box-sizing:border-box;background-color:#fff;color:var(--text-primary);transition:all .3s ease}.content-input:focus{border-color:var(--primary-color);box-shadow:0 0 0 3px rgba(30,144,255,.1)}.word-count{text-align:right;font-size:13px;color:var(--text-secondary);margin-bottom:20px}.upload-section{display:flex;flex-wrap:wrap;margin-bottom:25px}.image-upload-btn{width:100px;height:100px;display:flex;flex-direction:column;justify-content:center;align-items:center;border:1px dashed rgba(30,144,255,.5);border-radius:12px;margin-right:12px;margin-bottom:12px;background-color:rgba(30,144,255,.03);transition:all .3s ease}.image-upload-btn:active{background-color:rgba(30,144,255,.08);transform:scale(.98)}.upload-icon{font-size:30px;color:var(--primary-color);margin-bottom:5px}.upload-text{color:var(--primary-color);font-size:12px}.uploaded-images{display:flex;flex-wrap:wrap}.image-item{position:relative;width:100px;height:100px;margin-right:12px;margin-bottom:12px;border-radius:12px;overflow:hidden;box-shadow:0 3px 10px rgba(0,0,0,.1)}.preview-image{width:100%;height:100%;object-fit:cover}.delete-btn{position:absolute;top:5px;right:5px;width:22px;height:22px;background-color:rgba(0,0,0,.6);color:#fff;font-size:16px;text-align:center;line-height:22px;border-radius:50%;box-shadow:0 2px 5px rgba(0,0,0,.2)}.bottom-actions{display:flex;padding:15px 20px 25px;background-color:#fff;border-top:1px solid rgba(0,0,0,.05);box-shadow:0 -2px 10px rgba(0,0,0,.05)}.action-btn{flex:1;height:45px;line-height:45px;text-align:center;border-radius:22.5px;font-size:16px;font-weight:500;transition:all .3s ease}.save-btn{background-color:rgba(30,144,255,.1);color:var(--primary-color);margin-right:15px}.save-btn:active{background-color:rgba(30,144,255,.2);transform:scale(.98)}.publish-btn{background-image:var(--gradient-blue);color:#fff;box-shadow:0 3px 10px rgba(30,144,255,.3)}.publish-btn:active{transform:scale(.98);box-shadow:0 2px 6px rgba(30,144,255,.2)}
