:host{display:flex;flex-direction:column}

.tab-bar {
		display: flex;
		width: 100%;
		height: 55px;
		border-top: 1px solid rgba(0,0,0,0.1);
		background-color: #ffffff;
		position: fixed;
		bottom: 0;
		left: 0;
		right: 0;
		justify-content: space-around;
		align-items: center;
		z-index: 999;
		/* 增加底部安全区域 */
		padding-bottom: constant(safe-area-inset-bottom);
		padding-bottom: env(safe-area-inset-bottom);
}
.tab-item {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		width: 25%;
		height: 55px;
}
.nav-icon {
		width: 24px;
		height: 24px;
		margin-bottom: 4px;
}
.tab-text {
		font-size: 10px;
		color: #999999;
}
.active .tab-text {
		color: #007aff;
}
