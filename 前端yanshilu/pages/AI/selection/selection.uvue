<script lang="uts">
	/**
	 * @description AI择校选择页
	 */
	import Routes from '../../../utils/routes.js';
	import { aiSelectionApis } from '../../../config.js';

	export default {
		data() {
			return {
				title: 'AI智能择校',
				description: '通过多维度分析，帮助您找到最适合的学校',
				selectType: '',
				loading: false
			}
		},
		
		onLoad() {
			console.log('AI Selection page loaded');
		},
		
		methods: {
			/**
			 * @description 选择本科择校
			 */
			selectUndergraduate() {
				this.selectType = 'undergraduate';
				this.goToNextStep();
			},
			
			/**
			 * @description 选择研究生择校
			 */
			selectGraduate() {
				this.selectType = 'graduate';
				this.goToNextStep();
			},
			
			/**
			 * @description 前往下一步
			 */
			goToNextStep() {
				// 使用路由导航到下一步
				Routes.navigator.navigateTo(Routes.ai.step2, {
					type: this.selectType
				});
			},
			
			/**
			 * @description 返回上一页
			 */
			goBack() {
				Routes.navigator.navigateBack();
			},
			
			/**
			 * @description 跳到主页
			 */
			goToHome() {
				Routes.navigator.switchTab(Routes.main.INDEX);
			}
		}
	}
</script>

