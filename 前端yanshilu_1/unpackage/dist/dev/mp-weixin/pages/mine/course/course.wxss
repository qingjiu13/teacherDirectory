.course-container {
  padding: 20rpx;
}
.course-container .search-bar {
  margin-bottom: 20rpx;
}
.course-container .filter-tabs {
  margin-bottom: 20rpx;
}
.course-container .course-list {
  height: calc(100vh - 220rpx);
}
.course-container .course-list .course-card {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.2);
  border: 1rpx solid #1890ff;
  background: linear-gradient(to bottom, #f9fcff, #e6f4ff);
}
.course-container .course-list .course-card .card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.course-container .course-list .course-card .card-header .teacher-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.course-container .course-list .course-card .card-header .course-info {
  flex: 1;
  flex-direction: column;
  margin-left: 20rpx;
}
.course-container .course-list .course-card .card-header .course-info .course-name {
  margin-bottom: 8rpx;
}
.course-container .course-list .course-card .card-header .course-status {
  font-size: 24rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-weight: 500;
}
.course-container .course-list .course-card .card-header .course-status.ongoing {
  background: linear-gradient(to right, #1890ff, #36cffd);
  color: #fff;
}
.course-container .course-list .course-card .card-header .course-status.upcoming {
  background: linear-gradient(to right, #fa8c16, #ffc069);
  color: #fff;
}
.course-container .course-list .course-card .card-header .course-status.completed {
  background: linear-gradient(to right, #52c41a, #73d13d);
  color: #fff;
}
.course-container .course-list .course-card .card-body .info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}
.course-container .course-list .course-card .card-body .info-row .label {
  font-size: 26rpx;
  color: #666;
  margin-right: 15rpx;
  width: 100rpx;
}
.course-container .course-list .course-card .card-body .info-row .value {
  font-size: 26rpx;
  color: #333;
}
.course-container .course-list .course-card .card-body .info-row .progress {
  flex: 1;
}
.course-container .course-list .course-card .card-footer .detail-btn {
  background: linear-gradient(to right, #1890ff, #36cffd);
  color: #fff;
  border-radius: 6rpx;
  font-size: 26rpx;
  border: none;
  height: 60rpx;
  line-height: 60rpx;
}