              {{teacherInfo.tags[0]}}
            </view>
          </view>
        </view>
        
        <!-- 标签部分 - 只显示除第一个以外的其他标签 -->
        <view class="tags-row">
          <view class="tag" v-for="(tag, index) in teacherInfo.tags.slice(1)" :key="index">
            {{tag}}
          </view>
        </view>
        
        <!-- 学校专业信息 -->
        <view class="education-info">
          {{teacherInfo.school}} | {{teacherInfo.major}} | {{teacherInfo.score}}
        </view>
        
        <!-- 个人简介 -->
        <view class="profile-intro">
