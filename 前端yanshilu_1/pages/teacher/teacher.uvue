</template>

<script>
    import { Navigator, MessageRoutes } from '@/router/Router.js'
    import store, { loadTeacherData } from '@/store/index.js'
    import { mock } from '@/store/services'
    /**
    * @file 老师详情页
    * @description 展示老师个人信息和服务
    */
    export default {
        data() {
        return {
            teacherId: null,
            teacherInfo: {
            id: null,
            name: '',
            avatar: '',
            school: '',
            major: '',
            is_certified: false,
            tags: [],
            introduction: ''
            },
            activeTab: 'services', // 当前选中的标签页
            services: [], // 服务列表
            isLoading: false // 是否正在加载
        }
        },
    
    async onLoad(options) {
      // 获取老师ID
      this.teacherId = options.id || 1;
      
      // 显示加载状态
      this.isLoading = true;
      
      try {
        // 加载教师模块数据
        await loadTeacherData();
        console.log('教师模块数据已加载');
      } catch (error) {
        console.error('加载教师模块数据失败:', error);
      }
      
      // 加载老师信息和服务数据（合并为单个API调用）
      this.loadTeacherData();
    },
    
    methods: {
      /**
       * @description 切换标签页
       * @param {String} tab - 标签名称
       */
      switchTab(tab) {
        if (this.activeTab !== tab) {
          this.activeTab = tab;
        }
      },
      
      /**
       * @description 加载老师信息和服务列表（合并为一个API调用）
       */
      async loadTeacherData() {
        try {
          // 显示加载提示
          uni.showLoading({
            title: '加载中...'
          });
          
          // 使用合并后的API获取所有数据
          const result = await store.dispatch('teacher/getTeacherInfo', this.teacherId);
          
          if (result.success) {
            // 从store中获取老师信息和服务列表
            this.teacherInfo = store.getters['teacher/teacherInfo'];
            this.services = store.getters['teacher/services'];
          } else {
            throw new Error('获取老师数据失败');
          }
        } catch (error) {
          console.error('加载老师数据失败:', error);
          uni.showToast({
            title: '加载失败，请重试',
            icon: 'none'
          });
        } finally {
          uni.hideLoading();
          this.isLoading = false;
        }
      },
      
      /**
       * @description 发起咨询
       */
      startConsultation() {
        this.isLoading = true;
        
        setTimeout(() => {
          this.isLoading = false;
          // 使用router.js中的方法跳转到聊天页面
          Navigator.toChat(this.teacherId);
        }, 800);
      }
    }
  }
</script>

