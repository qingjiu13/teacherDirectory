/* pages/myPage/myPage.wxss */

/* 用户信息头部区域样式 */
.header {
  display: flex;           /* 使用flex布局 */
  align-items: center;     /* 垂直居中对齐 */
  padding: 30rpx;         /* 内边距 */
  background: #fff;       /* 背景色为白色 */
}

/* 用户头像样式 */
.avatar {
  width: 120rpx;          /* 头像宽度 */
  height: 120rpx;         /* 头像高度 */
  border-radius: 50%;     /* 圆形头像 */
  margin-right: 30rpx;    /* 右侧间距 */
}

/* 登录文本样式 */
.login-text {
  font-size: 40rpx;       /* 文字大小 */
  color: black;           /* 文字颜色 */
  margin-right: 20rpx;    /* 右侧间距 */
}

/* 用户标签样式 */
.tag {
  padding: 8rpx 40rpx;    /* 内边距 */
  border: 1px solid #999; /* 边框 */
  border-radius: 20rpx;   /* 圆角 */
  font-size: 24rpx;       /* 文字大小 */
  color: black;           /* 文字颜色 */
}

/* 用户数据统计区域样式 */
.statistics {
  display: flex;          /* 使用flex布局 */
  justify-content: space-around;  /* 均匀分布 */
  padding: 30rpx 0;       /* 上下内边距 */
  background: #fff;       /* 背景色为白色 */
}

/* 统计项样式 */
.stat-item {
  display: flex;          /* 使用flex布局 */
  flex-direction: column; /* 垂直排列 */
  align-items: center;    /* 水平居中对齐 */
}

/* 统计数字样式 */
.stat-num {
  font-size: 36rpx;       /* 文字大小 */
  font-weight: bold;      /* 文字加粗 */
  color: black;           /* 文字颜色 */
  margin-bottom: 8rpx;    /* 底部间距 */
}

/* 统计标签样式 */
.stat-label {
  font-size: 28rpx;       /* 文字大小 */
  color: black;           /* 文字颜色 */
}

/* 功能按钮组样式 */
.button-group {
  margin-top: 20rpx;      /* 顶部外边距 */
  padding: 0 30rpx;       /* 左右内边距 */
}

/* 菜单按钮样式 */
.menu-button {
  display: flex;          /* 使用flex布局 */
  align-items: center;    /* 垂直居中对齐 */
  width: 650rpx;         /* 按钮宽度 */
  height: 100rpx;        /* 按钮高度 */
  padding: 0 20rpx;      /* 左右内边距 */
  margin-bottom: 20rpx;  /* 底部外边距 */
  background: #fff;      /* 背景色为白色 */
  border: 2rpx solid #999996; /* 边框 */
  border-radius: 16rpx;  /* 圆角 */
}

/* 菜单按钮图标样式 */
.menu-button icon {
  margin-right: 20rpx;   /* 右侧间距 */
}

/* 菜单按钮文本样式 */
.menu-button text {
  font-size: 32rpx;      /* 文字大小 */
  color: black;          /* 文字颜色 */
}