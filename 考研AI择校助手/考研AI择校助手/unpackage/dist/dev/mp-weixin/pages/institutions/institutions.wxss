
.container {
	padding: 20rpx;
}
.header {
	margin-bottom: 20rpx;
}
.title {
	font-size: 40rpx;
	font-weight: bold;
}
.search-box {
	display: flex;
	align-items: center;
	margin-bottom: 20rpx;
}
.search-input {
	flex: 1;
	height: 60rpx;
	border: 1px solid #ccc;
	border-radius: 30rpx;
	padding: 0 20rpx;
}
.search-btn {
	margin-left: 20rpx;
	background-color: #007aff;
	color: #fff;
	border-radius: 30rpx;
}
.institution-list {
	margin-top: 20rpx;
}
.institution-item {
	padding: 20rpx;
	border-bottom: 1px solid #eee;
}
.institution-name {
	font-size: 32rpx;
	font-weight: bold;
}
.institution-desc {
	font-size: 28rpx;
	color: #666;
}

