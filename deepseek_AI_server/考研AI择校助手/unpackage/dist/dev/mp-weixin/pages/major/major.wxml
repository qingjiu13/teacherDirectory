<view class="container"><view class="header"><text class="title">专业库</text></view><view class="search-box"><input class="search-input" placeholder="请输入专业名称" data-event-opts="{{[['confirm',[['handleSearch',['$event']]]],['input',[['__set_model',['','searchText','$event',[]]]]]]}}" value="{{searchText}}" bindconfirm="__e" bindinput="__e"/><button data-event-opts="{{[['tap',[['handleSearch',['$event']]]]]}}" class="search-btn" bindtap="__e">搜索</button></view><view class="category-list"><block wx:for="{{categories}}" wx:for-item="category" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['selectCategory',['$0'],[[['categories','',index]]]]]]]}}" class="{{['category-item',(selectedCategory===category)?'active':'']}}" bindtap="__e">{{''+category+''}}</view></block></view><view class="major-list"><block wx:for="{{filteredMajors}}" wx:for-item="major" wx:for-index="index" wx:key="index"><view class="major-item"><text class="major-name">{{major.name}}</text><text class="major-code">{{"专业代码："+major.code}}</text><text class="major-desc">{{major.description}}</text></view></block></view></view>