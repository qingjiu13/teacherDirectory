
.container {
	padding: 30rpx;
}
.header {
	text-align: center;
	margin-bottom: 60rpx;
}
.title {
	font-size: 40rpx;
	font-weight: bold;
	color: #333;
}
.content {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.intro-section {
	text-align: center;
	margin-bottom: 80rpx;
}
.intro-text {
	font-size: 36rpx;
	color: #333;
	margin-bottom: 20rpx;
	display: block;
}
.desc-text {
	font-size: 28rpx;
	color: #666;
	display: block;
}
.start-btn {
	width: 80%;
	height: 90rpx;
	line-height: 90rpx;
	background: #007AFF;
	color: #FFFFFF;
	border-radius: 45rpx;
	font-size: 32rpx;
}

