@import "../../uvue.wxss";
:host{display:flex;flex-direction:column}
.service-container{padding:30rpx;background:linear-gradient(135deg,#f5f9ff,#edf3ff);min-height:100vh}.service-list{display:flex;flex-direction:column;gap:15rpx;padding:10rpx 0}.service-card{background:#fff;border-radius:30rpx;padding:25rpx 30rpx;box-shadow:0 2rpx 10rpx rgba(0,0,0,.05);transition:all .3s ease;position:relative;min-height:160rpx;margin-bottom:20rpx;border:1rpx solid rgba(74,137,220,.3)}.active-card{background:#f8fbff;box-shadow:0 4rpx 15rpx rgba(74,111,227,.1);border:1rpx solid rgba(74,137,220,.6)}.service-info{display:flex;flex-direction:row;align-items:center;width:100%}.service-thumb{width:160rpx;height:160rpx;background-color:#f0f0f0;border-radius:15rpx;overflow:hidden;flex-shrink:0;margin-right:30rpx;border:none;box-shadow:0 6rpx 15rpx rgba(0,0,0,.1)}.service-details{flex:1;overflow:hidden;display:flex;flex-direction:column;justify-content:center;padding-left:15rpx;margin-top:5rpx}.service-name{font-size:28rpx;font-weight:600;margin-bottom:10rpx;color:#333;white-space:nowrap;overflow:hidden;text-overflow:ellipsis}.service-price{font-size:26rpx;color:#464ef8;font-weight:500}.action-buttons{display:flex;flex-direction:row;gap:12rpx;margin-left:auto;align-items:center;padding-left:15rpx}.edit-btn,.delete-btn{width:45rpx;height:45rpx;display:flex;justify-content:center;align-items:center;transition:all .3s ease;background:transparent;box-shadow:none}.action-icon{width:36rpx;height:36rpx}.edit-btn:active,.delete-btn:active{transform:scale(.9)}.service-detail-card{position:fixed;top:50%;left:50%;transform:translate(-50%,-45%) scale(.95);width:85%;max-height:80vh;background:linear-gradient(135deg,#fff,#f8fbff);border-radius:20rpx;padding:40rpx 30rpx;box-shadow:0 15rpx 40rpx rgba(0,0,0,.2);z-index:1000;overflow-y:auto;opacity:0;transition:all .3s ease;visibility:hidden;border:2rpx solid rgba(200,220,255,.8)}.detail-card-expanded{transform:translate(-50%,-50%) scale(1);opacity:1;visibility:visible}.detail-close-btn{position:absolute;top:15rpx;right:20rpx;font-size:40rpx;color:#999;height:60rpx;width:60rpx;display:flex;align-items:center;justify-content:center;z-index:10;transition:all .3s ease}.detail-close-btn:active{transform:scale(.9);color:#666}.detail-thumb{width:200rpx;height:200rpx;background-color:#f0f0f0;border-radius:16rpx;margin:0 auto 30rpx;box-shadow:0 8rpx 16rpx rgba(0,0,0,.12);overflow:hidden;border:2rpx solid rgba(200,220,255,.8)}.detail-info{margin-bottom:30rpx;padding-bottom:25rpx;border-bottom:2rpx solid rgba(200,220,255,.8)}.detail-name{font-size:36rpx;font-weight:600;text-align:center;margin-bottom:15rpx;color:#333;letter-spacing:1rpx}.detail-price{font-size:32rpx;color:#4a89dc;text-align:center;font-weight:500}.detail-description{font-size:28rpx;color:#333;margin-top:25rpx}.description-title{display:block;font-size:34rpx;font-weight:600;margin-bottom:20rpx;color:#333;letter-spacing:1rpx}.description-content{display:block;font-size:30rpx;color:#666;line-height:1.7;margin-bottom:25rpx;letter-spacing:.5rpx}.detail-image-placeholder{width:100%;height:240rpx;background:linear-gradient(135deg,#f7f9ff,#edf2ff);display:flex;justify-content:center;align-items:center;margin-top:25rpx;border-radius:16rpx;border:2rpx dashed rgba(200,220,255,.8)}.image-icon{font-size:60rpx;color:#b0c4de}.detail-overlay{position:fixed;top:0;left:0;width:100%;height:100%;background-color:rgba(0,0,0,.6);z-index:999;opacity:1;transition:opacity .3s ease;-webkit-backdrop-filter:blur(3px);backdrop-filter:blur(3px)}.add-button{position:fixed;bottom:100rpx;right:50rpx;width:100rpx;height:100rpx;border-radius:50%;background:linear-gradient(135deg,#4a89dc,#3a7bd5);box-shadow:0 6rpx 20rpx rgba(58,123,213,.4);transition:all .3s ease;display:flex;justify-content:center;align-items:center;font-size:70rpx;font-weight:700;color:#fff;z-index:999;line-height:90rpx;padding-bottom:8rpx}.add-button:active{transform:scale(.95);box-shadow:0 3rpx 10rpx rgba(58,123,213,.3)}.empty-tip{display:flex;justify-content:center;align-items:center;height:300rpx;background-color:#fff;border-radius:20rpx;margin-bottom:30rpx;box-shadow:0 4rpx 12rpx rgba(0,0,0,.05)}.empty-text{font-size:28rpx;color:#999;text-align:center}
