:host{display:flex;flex-direction:column}
.input-section{width:100%;height:129rpx;display:flex;flex-direction:row;box-sizing:border-box;background-color:#fff;margin-top:5rpx;left:0;right:0;bottom:0;z-index:1000}.message-input{flex:1;height:52rpx;background-color:#fff;border:2rpx solid rgba(151,151,151,1);border-radius:8px;margin-right:30rpx;margin-left:30rpx;font-size:28rpx;box-sizing:border-box;margin-top:20rpx;padding-left:20rpx}.send-button{width:108rpx;height:52rpx;background:linear-gradient(180deg,#a5a9f7,rgba(70,78,248,.9));color:#fff;border-radius:8px;display:flex;align-items:center;justify-content:center;border:none;padding:0;margin-right:30rpx;box-sizing:border-box;transition:all .3s;box-shadow:0 2rpx 10rpx rgba(0,0,0,.1);margin-top:20rpx}.send-button:disabled{background-color:#f0f0f0;color:#999;border:2rpx solid #ddd;box-shadow:none}.send-button-text{font-size:28rpx}
