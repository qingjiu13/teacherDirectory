:host{display:flex;flex-direction:column}
.input-section{width:100%;height:129rpx;display:flex;flex-direction:row;align-items:center;box-sizing:border-box;background-color:#fff}.message-input{flex:1;height:80rpx;background-color:#fff;border:2rpx solid #ddd;border-radius:8px;margin-right:20rpx;font-size:28rpx;box-sizing:border-box}.send-button{width:140rpx;height:80rpx;background:linear-gradient(180deg,#a5a9f7,rgba(70,78,248,.9));color:#fff;border-radius:8px;display:flex;align-items:center;justify-content:center;border:none;padding:0;box-sizing:border-box;transition:all .3s;box-shadow:0 2rpx 10rpx rgba(0,0,0,.1)}.send-button:disabled{background-color:#f0f0f0;color:#999;border:2rpx solid #ddd;box-shadow:none}.send-button-text{font-size:28rpx}
