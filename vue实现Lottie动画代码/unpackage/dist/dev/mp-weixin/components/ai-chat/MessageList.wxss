:host{display:flex;flex-direction:column}

.message-section {
		flex: 1;
		width: 100%;
		background-color: #ffffff;
		border-radius: 16rpx;
		margin-bottom: 20rpx;
		overflow: hidden;
		position: relative;
		box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.message-scroll {
		height: 100%;
		padding: 30rpx;
}
.empty-message {
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
}
	
	/* 新增空消息内容样式 */
.empty-message-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
}
.empty-message-image {
		width: 180rpx;
		height: 180rpx;
		margin-bottom: 32rpx;
}
.empty-message-title {
		font-size: 32rpx;
		color: #333;
		font-weight: bold;
		margin-bottom: 12rpx;
}
.empty-message-desc {
		font-size: 26rpx;
		color: #888;
		text-align: center;
}
.message-list {
		display: flex;
		flex-direction: column;
}
