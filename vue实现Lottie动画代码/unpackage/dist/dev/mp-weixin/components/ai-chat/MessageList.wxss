:host{display:flex;flex-direction:column}

.message-section {
		flex: 1;
		width: 100%;
		background-color: #ffffff;
		border-radius: 16rpx;
		margin-bottom: 20rpx;
		overflow: hidden;
		position: relative;
		box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.message-scroll {
		height: 100%;
		padding: 30rpx;
}
.empty-message {
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
}
.empty-message-text {
		color: #999;
		font-size: 28rpx;
}
.message-list {
		display: flex;
		flex-direction: column;
}
