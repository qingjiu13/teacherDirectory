@import "../../uvue.wxss";
:host{display:flex;flex-direction:column}

.searchText.data-v-d5601611 {
    width: 100%;
    height: 36px;
    padding: 0 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
}
.search-wrapper.data-v-d5601611 {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.page.data-v-d5601611 {
    display: flex;
    flex-direction: column;
    height: 100vh;
}
.search-wrapper.data-v-d5601611 {
    padding: 10px;
    background: #fff;
}
.search-input.data-v-d5601611 {
    width: 100%;
    height: 36px;
    padding: 0 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
}
.container-select.data-v-d5601611 {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-bottom: 1px solid #eee;
    background: #fff;
    width: 100%;
    flex-wrap: nowrap;
    position: -webkit-sticky;
    position: sticky;
    top: 0;
    z-index: 10;
    overflow-x: hidden;
}
.select-item.data-v-d5601611 {
    flex: 1;
    min-width: 0;
    padding: 12px 5px;
    position: relative;
    white-space: nowrap;
    display: flex;
    flex-direction: row; /* 水平排列 */
    align-items: center;
    justify-content: center;
}
.select-item-content.data-v-d5601611 {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.label-text.data-v-d5601611 {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    margin-bottom: 2px;
}
.select-item.active .label-text.data-v-d5601611 {
    color: #007AFF;
}
.select-item.active .arrow-icon.data-v-d5601611 {
    color: #007AFF;
}
.arrow-icon.data-v-d5601611 {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
    transition: transform 0.3s ease;
}
.arrow-icon-rotate.data-v-d5601611 {
    transform: rotate(180deg);
}
.container-match.data-v-d5601611 {
    flex: 1;
    background: #f5f5f5;
    overflow-y: auto;
}
.popup-content.data-v-d5601611 {
    background-color: #fff;
    border-radius: 16px 16px 0 0;
    height: 70vh;
    width: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    position: relative;
    padding: 15rpx 30rpx;
}
  
  /* 顶部标题栏 */
.popup-header.data-v-d5601611 {
    position: relative;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid #f5f5f5;
}
.popup-title.data-v-d5601611 {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
}
.popup-close.data-v-d5601611 {
    color: #007AFF;
    font-size: 14px;
    position: absolute;
    right: 16px;
    top: 14px;
}
  
  /* 状态提示栏 */
.popup-status-bar.data-v-d5601611 {
    text-align: center;
    padding: 8px 0;
    border-bottom: 1px solid #f0f0f0;
}
.popup-status.data-v-d5601611 {
    font-size: 14px;
    color: #333;
}
  
  /* 选项列表区域 */
.popup-scroll.data-v-d5601611 {
    flex: 1;
    height: calc(100% - 80px);
}
  
  /* 列表项样式 */
.popup-item.data-v-d5601611 {
    width: 100%;
    padding: 15px 16px;
    border-bottom: 1px solid #f5f5f5;
    font-size: 15px;
    color: #333;
    box-sizing: border-box;
}
.popup-item-active.data-v-d5601611 {
    color: #007AFF;
}
.filter-section.data-v-d5601611 {
    padding: 10px 16px;
}
.filter-title.data-v-d5601611 {
    font-size: 15px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #333;
}
.filter-options.data-v-d5601611 {
    display: flex;
    flex-wrap: wrap;
}
.filter-option.data-v-d5601611 {
    padding: 8px 12px;
    margin-right: 10px;
    margin-bottom: 10px;
    background-color: #f5f5f5;
    border-radius: 20px;
    font-size: 14px;
    color: #666;
}
.filter-option-active.data-v-d5601611 {
    background-color: #e6f2ff;
    color: #007AFF;
    border: 1px solid #007AFF;
}
  
  /* 老师卡片样式 */
.card-list.data-v-d5601611 {
    flex: 1;
    padding: 10px 15px;
    position: relative;
    z-index: 1;
}
.teacher-card.data-v-d5601611 {
    display: flex;
    flex-direction: row;
    background-color: #ffffff;
    border-radius: 16px;
    padding: 18px;
    margin-bottom: 15px;
    box-shadow: 0 4px 12px rgba(30, 144, 255, 0.1);
    position: relative;
    min-height: 110px;
}
.card-left.data-v-d5601611 {
    margin-right: 15px;
    align-self: flex-start;
}
.teacher-avatar.data-v-d5601611 {
    width: 70px;
    height: 70px;
    border-radius: 35px;
    background-color: #f5f5f5;
}
.card-middle.data-v-d5601611 {
    flex: 1;
    padding-right: 65px;
    display: flex;
    flex-direction: column;
    min-height: 70px;
    justify-content: space-between;
    width: calc(100% - 85px);
    box-sizing: border-box;
}
.card-middle-top.data-v-d5601611 {
    display: flex;
    flex-direction: column;
    width: 100%;
}
.teacher-name.data-v-d5601611 {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 6px;
    color: #333333;
}
.teacher-info.data-v-d5601611 {
    font-size: 14px;
    color: #666666;
    margin-bottom: 12px;
}
.teacher-tags.data-v-d5601611 {
    display: flex;
    flex-wrap: wrap;
}
.tag.data-v-d5601611 {
    font-size: 12px;
    color: #1E90FF;
    background-color: rgba(30, 144, 255, 0.1);
    padding: 4px 8px;
    border-radius: 12px;
    margin-right: 8px;
    margin-bottom: 8px;
    /* 新增以下属性 */
    display: inline-flex;
    justify-content: center;
    white-space: nowrap;
    width: -webkit-fit-content;
    width: fit-content;
    /* 或者可以使用 min-width: fit-content; */
}
.card-right.data-v-d5601611 {
    position: absolute;
    top: 18px;
    right: 18px;
    z-index: 2;
}
.communicate-btn.data-v-d5601611 {
    background-color: #1E90FF;
    color: #ffffff;
    font-size: 14px;
    padding: 6px 12px;
    border-radius: 20px;
    border: none;
    font-weight: 500;
    line-height: 1.2;
    min-width: 80px;
}
.empty-state.data-v-d5601611 {
    text-align: center;
    padding: 30px 0;
    color: #999;
}
.loading-more.data-v-d5601611 {
    text-align: center;
    padding: 15px 0;
    color: #999;
}
  
  /* 弹出层蒙版 */
.filter-mask.data-v-d5601611 {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 998;
}
  
  /* 弹出层容器 */
.filter-popup.data-v-d5601611 {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #fff;
    z-index: 999;
    border-radius: 20rpx 20rpx 0 0;
    display: flex;
    flex-direction: column;
    height: 650rpx;
}
  
  /* 筛选标签 */
.filter-label.data-v-d5601611 {
    display: block;
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 15rpx;
}
  
  /* 底部按钮容器 */
.popup-buttons.data-v-d5601611 {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 30rpx 0;
    margin-top: 320rpx;
    border-top: 1px solid #f0f0f0;
}
  
  /* 底部按钮样式 */
.popup-button.data-v-d5601611 {
    width: 45%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 40rpx;
    font-size: 28rpx;
}
  
  /* 重置按钮样式 */
.reset-button.data-v-d5601611 {
    background-color: #f5f5f5;
    color: #666;
    border: none;
}
  
  /* 确定按钮样式 */
.confirm-button.data-v-d5601611 {
    background-color: #007AFF;
    color: #fff;
    border: none;
}
  
  /* 表单行样式 */
.form-row.data-v-d5601611 {
    margin-bottom: 25rpx;
    width: 100%;
}
.selected-text.data-v-d5601611 {
    font-size: 12px;
    color: #007AFF;
    margin-top: 2px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 80px;
}
  
  /* 非专业课选项卡样式 */
.nonpro-tabs.data-v-d5601611 {
    display: flex;
    flex-direction: row;
    width: 100%;
    justify-content: space-between;
    margin-bottom: 20px;
    border-bottom: 1px solid #f0f0f0;
    padding-bottom: 10px;
}
.nonpro-tabs .tab-item.data-v-d5601611 {
    flex: 1;
    text-align: center;
    padding: 10px 0;
    font-size: 14px;
    color: #666;
    position: relative;
}
.nonpro-tabs .tab-item.active.data-v-d5601611 {
    color: #007AFF;
    font-weight: 500;
}
.nonpro-tabs .tab-item.active.data-v-d5601611::after {
    content: '';
    position: absolute;
    left: 25%;
    bottom: -10px;
    width: 50%;
    height: 3px;
    background-color: #007AFF;
    border-radius: 3px;
}
.filter-label.data-v-d5601611 {
    font-size: 15px;
    color: #333;
    margin-bottom: 10px;
    display: block;
}
  