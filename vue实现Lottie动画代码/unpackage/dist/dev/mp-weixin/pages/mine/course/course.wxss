@import "../../../uvue.wxss";
:host{display:flex;flex-direction:column}

.container {
		padding: 20rpx;
}
	/* 移除.header相关样式 */
.header {
		margin-bottom: 30rpx;
}
.title {
		font-size: 36rpx;
		font-weight: bold;
}
.course-list {
		height: calc(100vh - 100rpx);
}
.course-item {
		display: flex;
		align-items: center;
		padding: 20rpx;
		margin-bottom: 20rpx;
		background-color: #fff;
		border-radius: 10rpx;
		box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}
.course-img {
		width: 150rpx;
		height: 150rpx;
		border-radius: 10rpx;
		margin-right: 20rpx;
}
.course-info {
		flex: 1;
}
.course-name {
		font-size: 32rpx;
		font-weight: bold;
		display: block;
		margin-bottom: 10rpx;
}
.course-teacher, .course-time, .course-price {
		font-size: 28rpx;
		color: #666;
		display: block;
		margin-bottom: 5rpx;
}
.reserve-btn {
		background-color: #007AFF;
		color: white;
		border-radius: 40rpx;
		padding: 0 30rpx;
		height: 60rpx;
		line-height: 60rpx;
		font-size: 28rpx;
}
